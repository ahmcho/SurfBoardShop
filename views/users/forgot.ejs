<% layout('layouts/post-index') -%>
<div class="d-flex justify-content-center login-form">


<form action="/forgot-password?_method=PUT" method="POST">
	<div class="form-group">
		<label for="email">Email</label>
		<input class="form-control" type="text" id="email" name="email" placeholder="Enter your email" autofocus>
	</div>
	<div class="form-group">
		<input class="btn btn-warning" type="submit" value="Reset Password">
	</div>
</form>
</div>